{# templates/finishedActionPrompt.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Action Result{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
            margin-left: 20px;
            margin-right: 20px;
            border-left: 1px solid #444444;
            border-right: 1px solid #444444;
        }
        .card {
            background-color: #1e1e1e;
            color: #ffffff;
            border: 1px solid #444444;
            border-radius: 8px;
            margin-top: 20px;
        }
        .card-header {
            background-color: #333333;
            color: #ffffff;
            border-bottom: 1px solid #444444;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            padding: 10px 15px;
        }
        .card-body {
            padding: 15px;
        }
        .alert-success {
            background-color: #4caf50;
            color: #ffffff;
            border: 1px solid #388e3c;
        }
        .alert-danger {
            background-color: #f44336;
            color: #ffffff;
            border: 1px solid #d32f2f;
        }
        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 8px;
            text-align: center;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                {% if success %}
                    <div class="alert alert-success">
                        <strong>Success:</strong> {{ entity }} {{ action }} successfully.
                    </div>
                {% else %}
                    <div class="alert alert-danger">
                        <strong>Error:</strong> {{ entity }} was not {{ action }}.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
