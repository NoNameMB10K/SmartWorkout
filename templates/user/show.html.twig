{# templates/user/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1 class="mt-3 mb-0">User Profile</h1>
            </div>
            <div class="card-body">

                <div class="card mt-3">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Name: {{ user.name }}</h5>
                        </div>
                    </div>
                    <br>
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Birthday: {{ user.birthday ? user.birthday|date('Y-m-d') : 'N/A' }}</h5>
                        </div>
                    </div>
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Gender: {{ user.gender is not null ? (user.gender == 1 ? 'Male' : 'Female') : 'N/A' }}</h5>
                        </div>
                    </div>
                </div>
                <a href="{{ path('user_edit') }}" class="btn btn-secondary">Edit</a>
                <a href="{{ path('reset_password') }}" class="btn btn-secondary">Reset Password</a>
            </div>
        </div>
    </div>
{% endblock %}
