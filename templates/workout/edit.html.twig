{#/workout/edit.html.twig#}

{% extends 'base.html.twig' %}

{% block title %}Edit Workout{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .container {
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
        }
        h1 {
            color: #ffffff;
            border-bottom: 2px solid #444444;
            padding-bottom: 10px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        input[type=text], input[type=datetime-local], select {
            background-color: #2c2c2c;
            color: #e0e0e0;
            border: 1px solid #444444;
            border-radius: 5px;
            padding: 8px;
            width: 100%;
        }
        ::placeholder {
            color: #888888;
        }
        .btn-primary {
            background-color: #333333;
            border-color: #444444;
        }
        .btn-primary:hover {
            background-color: #444444;
            border-color: #555555;
        }
        .btn-danger {
            background-color: #bb2a2a;
            border-color: #cc3b3b;
        }
        .btn-danger:hover {
            background-color: #cc3b3b;
            border-color: #dd4c4c;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Edit Workout</h1>
        {{ form_start(workoutForm) }}
        <div class="form-group">
            {{ form_row(workoutForm.name) }}
        </div>
        <div class="form-group">
            {{ form_row(workoutForm.date) }}
        </div>
        <div class="form-group">
            {{ form_row(workoutForm.type) }}
        </div>
        {{ form_widget(workoutForm.save, {'attr': {'class': 'btn btn-primary'}}) }}
        {{ form_end(workoutForm) }}

        <h2>Delete Workout</h2>
        {{ form_start(deleteWorkout) }}
        {{ form_widget(deleteWorkout.delete, {'attr': {'class': 'btn btn-danger'}}) }}
        {{ form_end(deleteWorkout) }}
    </div>
{% endblock %}
