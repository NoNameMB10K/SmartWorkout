{#/workout/show.html.twig#}

{% extends 'base.html.twig' %}

{% block title %}Workout{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .container {
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
        }
        h1 {
            color: #ffffff;
            border-bottom: 2px solid #444444;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        .card {
            background-color: #2c2c2c;
            border: none;
        }
        .card-header {
            background-color: #333333;
            color: #ffffff;
            border-bottom: 1px solid #444444;
        }
        .card-body {
            color: #e0e0e0;
        }
        .card-text {
            margin-bottom: 10px;
        }
        .label {
            font-weight: bold;
            color: #cccccc;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Workout Details</h1>
        <div class="card">
            <div class="card-header">
                Workout Information
            </div>
            <div class="card-body">
                <p class="card-text"><span class="label">Name:</span> {{ workout.name }}</p>
                <p class="card-text"><span class="label">Date:</span> {{ workout.date|date('Y-m-d H:i:s') }}</p>
                <p class="card-text"><span class="label">User ID:</span> {{ workout.user.id }}</p>
                <p class="card-text"><span class="label">Type:</span> {{ workout.type is not null ? workout.type.name : 'N/A' }}</p>
            </div>
        </div>
    </div>
{% endblock %}
