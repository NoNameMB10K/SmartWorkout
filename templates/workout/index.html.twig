{#/workout/index.html.twig#}

{% extends 'base.html.twig' %}

{% block title %}Workouts{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h1 class="mt-3">WORKOUTS</h1>
                {% for workout in workouts %}
                    <div class="card mt-3">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title">{{ workout.name }}</h5>
                                <p class="card-text">{{ workout.date|date('Y-m-d H:i:s') }}</p>
                            </div>
                            <div>
                                <a href="{{ path('showWorkout_exerciseLog', { 'workoutId': workout.id }) }}" class="btn btn-primary">Show more</a>
                                <a href="{{ path('edit_workout', { 'id': workout.id }) }}" class="btn btn-secondary">Edit</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                <p class="mt-3"><a href="{{ path('new_workout') }}" class="btn btn-success">Create new workout</a></p>
            </div>
        </div>
    </div>
{% endblock %}

