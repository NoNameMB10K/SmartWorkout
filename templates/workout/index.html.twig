{#/workout/index.html.twig#}
<!DOCTYPE html>
<html>
<head>
    <title>Workouts</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
<h1>Workouts</h1>
<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Date</th>
        <th>User ID</th>
        <th>Type</th>
    </tr>
    </thead>
    <tbody>
    {% for workout in workouts %}
        <tr>
            <td>{{ workout.name }}</td>
            <td>{{ workout.date|date('Y-m-d H:i:s') }}</td>
            <td>{{ workout.user.id }}</td>
            <td>{{ workout.type is not null ? workout.type.name : 'N/A' }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</body>
</html>