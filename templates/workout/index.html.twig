{#/workout/index.html.twig#}

{% extends 'base.html.twig' %}

{% block title %}Workouts{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .container {
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 8px;
        }
        h1 {
            color: #ffffff;
            border-bottom: 2px solid #444444;
            padding-bottom: 10px;
        }
        table {
            background-color: #2c2c2c;
            color: #e0e0e0;
            border: none;
            width: 100%;
            border-collapse: collapse;
        }
        th {
            background-color: #333333;
            color: #ffffff;
            border: none;
        }
        td {
            background-color: #2c2c2c;
            color: #e0e0e0;
            border: none;
        }
        .table-bordered td, .table-bordered th {
            border: 1px solid #444444;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Workouts</h1>
        <table class="table table-bordered mt-3">
            <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>User ID</th>
                <th>Type</th>
            </tr>
            </thead>
            <tbody>
            {% for workout in workouts %}
                <tr>
                    <td>{{ workout.name }}</td>
                    <td>{{ workout.date|date('Y-m-d H:i:s') }}</td>
                    <td>{{ workout.user.id }}</td>
                    <td>{{ workout.type is not null ? workout.type.name : 'N/A' }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
