{# /exercise_log/newSetWorkout.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Exercises{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
        }
        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .card {
            background-color: #333333;
            color: #ffffff;
            border: 1px solid #444444;
            border-radius: 8px;
            width: calc(33.33% - 20px);
            margin-bottom: 20px;
            overflow: hidden;
        }
        .card-header {
            background-color: #1e1e1e;
            color: #ffffff;
            border-bottom: 1px solid #444444;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            padding: 10px 15px;
            text-align: center;
        }
        .card-body {
            padding: 15px;
            text-align: center;
        }
        .card-footer {
            background-color: #1e1e1e;
            color: #ffffff;
            border-top: 1px solid #444444;
            border-bottom-left-radius: 8px;
            border-bottom-right-radius: 8px;
            padding: 10px 15px;
            text-align: center;
        }
        .video-preview {
            max-width: 100%;
            height: auto;
            margin-bottom: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Workout</h1>
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>User ID</th>
                <th>Type</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ workout.name }}</td>
                <td>{{ workout.date|date('Y-m-d H:i:s') }}</td>
                <td>{{ workout.user.id }}</td>
                <td>{{ workout.type is not null ? workout.type.name : 'N/A' }}</td>
            </tr>
            </tbody>
        </table>
        {{ form(formExerciseLog) }}
    </div>
{% endblock %}

