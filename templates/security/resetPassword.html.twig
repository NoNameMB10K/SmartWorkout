{#/workout/new.html.twig#}

{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block nav %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        input[type=text], input[type=datetime-local], select {
            background-color: #2c2c2c;
            color: #e0e0e0;
            border: 1px solid #444444;
            border-radius: 5px;
            padding: 8px;
            width: 100%;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <h1>Reset Password</h1>
            {{ form_start(resetForm) }}
            <div class="form-group">
                {{ form_row(resetForm.plainPassword, {
                    label: 'Password',
                    attr: {
                        style: 'background-color: #2c2c2c; color: #e0e0e0; border: 1px solid #444444; border-radius: 5px; padding: 8px; width: 100%;'
                    }
                }) }}
            </div>
            <div class="form-group">
                {{ form_widget(resetForm.submit, {'attr': {'class': 'btn btn-primary', 'style': 'width: 8%;'}}) }}
            </div>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
