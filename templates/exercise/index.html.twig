{# templates/exercise/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Exercises{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
        }
        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .card {
            background-color: #333333;
            color: #ffffff;
            border: 1px solid #444444;
            border-radius: 8px;
            width: calc(33.33% - 20px);
            margin-bottom: 20px;
            overflow: hidden;
        }
        .card-header {
            background-color: #1e1e1e;
            color: #ffffff;
            border-bottom: 1px solid #444444;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            padding: 10px 15px;
            text-align: center;
        }
        .card-body {
            padding: 15px;
            text-align: center;
        }
        .card-footer {
            background-color: #1e1e1e;
            color: #ffffff;
            border-top: 1px solid #444444;
            border-bottom-left-radius: 8px;
            border-bottom-right-radius: 8px;
            padding: 10px 15px;
            text-align: center;
        }
        .video-preview {
            max-width: 100%;
            height: auto;
            margin-bottom: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5 mb-4">Exercises</h1>
        <div class="card-container">
            {% for exercise in exercises %}
                <div class="card">
                    <div class="card-header">
                        <h3>{{ exercise.name }}</h3>
                    </div>
                    <div class="card-body">
                        <iframe class="video-preview" src="https://www.youtube.com/embed/{{ exercise.linkToVideo }}" frameborder="0" allowfullscreen></iframe>
                    </div>
                    <div class="card-footer">
                        <p>Type: {{ exercise.type is not null ? exercise.type.name : 'N/A' }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
