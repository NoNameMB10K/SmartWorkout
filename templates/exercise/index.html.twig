{# templates/exercise/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Exercises{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h1 class="mt-3">EXERCISES</h1>
                <div class="row">
                    {% for exercise in exercises %}
                        <div class="col-md-6">
                            <div class="card mt-3">
                                <div class="card-body">
                                    <iframe class="video-preview" src="https://www.youtube.com/embed/{{ exercise.linkToVideo }}" frameborder="0" allowfullscreen></iframe>
                                </div>
                                <div class="card-footer">
                                    <h5 class="card-title">{{ exercise.name }}</h5>
                                    <p>Type: {{ exercise.type is not null ? exercise.type.name : 'N/A' }}</p>
                                    <a href="{{ path('exercise_edit', { 'id': exercise.id }) }}" class="btn btn-secondary">Edit</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <p class="mt-3"><a href="{{ path('exercises_new') }}" class="btn btn-success">Create new exercise</a></p>
            </div>
        </div>
    </div>
{% endblock %}


