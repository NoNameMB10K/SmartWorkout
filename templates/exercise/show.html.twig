{# templates/exercise/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Exercise: {{ exercise.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
        }
        .card {
            background-color: #333333;
            color: #ffffff;
            border: 1px solid #444444;
            border-radius: 8px;
            width: 50%;
            margin: 0 auto;
            overflow: hidden;
            height: 500px;
            display: flex;
            flex-direction: column;
        }
        .card-header {
            background-color: #1e1e1e;
            color: #ffffff;
            border-bottom: 1px solid #444444;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            padding: 10px 15px;
            text-align: center;
        }
        .card-body {
            flex: 1;
            padding: 15px;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .card-footer {
            background-color: #1e1e1e;
            color: #ffffff;
            border-top: 1px solid #444444;
            border-bottom-left-radius: 8px;
            border-bottom-right-radius: 8px;
            padding: 10px 15px;
            text-align: center;
        }
        .video-preview {
            width: 100%;
            height: calc(100% - 30px);
            max-height: 100%;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3>{{ exercise.name }}</h3>
        </div>
        <div class="card-body">
            <iframe class="video-preview" src="https://www.youtube.com/embed/{{ exercise.linkToVideo }}" frameborder="0" allowfullscreen></iframe>
        </div>
        <div class="card-footer">
            <p>Type: {{ exercise.type is not null ? exercise.type.name : 'N/A' }}</p>
        </div>
    </div>
{% endblock %}
