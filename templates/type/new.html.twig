{# templates/type/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Type{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        input[type=text], input[type=url], select {
            background-color: #2c2c2c;
            color: #e0e0e0;
            border: 1px solid #444444;
            border-radius: 5px;
            padding: 8px;
            width: 100%;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <h1>Edit Exercise</h1>
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.name) }}
            </div>
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary', 'style': 'width: 8%;'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}